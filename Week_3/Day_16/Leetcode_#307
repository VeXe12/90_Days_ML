class NumArray:

    def __init__(self, nums: List[int]):
        self.n = len(nums)
        self.tree = [0] * (4 * self.n)
        self.nums = nums[:] 
        for i in range(self.n):
            self._update_recursive(1, 0, self.n - 1, i, nums[i])

    def _update_recursive(self, cur, cur_left, cur_right, idx, val):
        if cur_left == cur_right:
            self.tree[cur] = val
        else:
            mid = (cur_left + cur_right) // 2
            
            if idx <= mid:
                self._update_recursive(cur * 2, cur_left, mid, idx, val)
            else:
                self._update_recursive(cur * 2 + 1, mid + 1, cur_right, idx, val)
            
            self.tree[cur] = self.tree[cur * 2] + self.tree[cur * 2 + 1]   

    def update(self, index: int, val: int) -> None:
        self._update_recursive(1, 0, self.n - 1, index, val)

    def _sumRange_recursive(self, node, start, end, L, R):
        if R < start or end < L:
            return 0

        if L <= start and end <= R:
            return self.tree[node]

        mid = (start + end) // 2
        left_sum = self._sumRange_recursive(2 * node, start, mid, L, R)
        right_sum = self._sumRange_recursive(2 * node + 1, mid + 1, end, L, R)
        
        return left_sum + right_sum            

    def sumRange(self, left: int, right: int) -> int:
        return self._sumRange_recursive(1, 0, self.n - 1, left, right)
# Your NumArray object will be instantiated and called as such:
# obj = NumArray(nums)
# obj.update(index,val)
# param_2 = obj.sumRange(left,right)